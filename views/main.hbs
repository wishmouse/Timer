<html>
<head>
  <title>Methuselah</title>
  <link rel='stylesheet' type='text/css' href='../stylesheets/normalize.css'></link>
  <link rel='stylesheet' type='text/css' href='../stylesheets/skeleton.css'></link>
  <link rel='stylesheet' type='text/css' href='../stylesheets/style.css'></link>
  <link href="http://cdn.jsdelivr.net/timepicker.js/latest/timepicker.min.css" rel="stylesheet"/>
  <link href='https://fonts.googleapis.com/css?family=Righteous' rel='stylesheet' type='text/css'>
  <script src="/bundle.js"></script>
  <script src="http://cdn.jsdelivr.net/timepicker.js/latest/timepicker.min.js"></script>
</head>
<body>
<div id="countdown-timer">
  <div class="container">
     <div class='row'>
       <div class="four columns">
         <p>Todays date<p>
          <div class="time-values" id='todays-date'></div>
        </div>

      <div class="four columns">
        <p>Current time<p>
          <div class="time-values" id='todays-time'></div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class='row'>
      <div class="four columns">
        <p>UTC date<p>
          <div class="time-values" id='todays-date-gtm'></div>
      </div>
      <div class="four columns">
        <p>UTC time<p>
          <div class="time-values" id='todays-time-gtm'></div>
          <span id="todays-date-gtm-epoch" hidden/>
      </div>
    </div>
  </div>

  <div class="container">
     <div class='row'>
       <div class="four columns">
         <p>MCT<p>
          <div class="times" id='mct-time'></div>
          <span id="mct-epoch" hidden>
        </div>

      <div class="four columns">
        <p>ECT<p>
          <div class="times" id='ect-time'></div>
          <span id="ect-epoch"  hidden>
      </div>
    </div>
  </div>
  <div class="container">
    <div class='row'>
        <div class="six columns" style="height: 20%">
          <p>Timer</p>
           <div id="timeToGo">
            <ul>
              <li id="hours"></li>
              <li id="minutes"></li>
              <li id="seconds"></li>
            </ul>
          </div>
          <div id="timeToGoLabels">
            <ul>
              <li>Hours</li>
              <li>Min</li>
              <li>Seconds</li>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class='row'>
        <div id="timer-message" class="twelve columns"></div>
      </div>
    </div>
</div>

<input type="button" value="Enter times" id="show-data">
<div id="enter-data"
  <form id="data-form" >
        <p>MCT time</p>
        <input type="datetime-local" id="mct-input" class="times" style="width:300">

        <p>ECT time</p>
        <input type="datetime-local" id="ect-input" class="times" style="width:300">
        <input type="submit" value="Submit" id="data-submit">

        <div id="error" class="error">Dates do not match</div>
  </form>
  <input type="button" value="Check data" id="check-data">
</div>


